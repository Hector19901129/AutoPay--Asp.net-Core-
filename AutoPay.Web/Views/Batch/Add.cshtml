@model AutoPay.ViewModels.Batch.BatchAddVm
@{
    ViewData["Title"] = "Add Batch";
    ViewBag.NavCssBatches = "active";
}

<partial name="_PageHeaderPartial" model="AdminPageHeader.GetDashboardHeader()" />
<section class="content">
    <div class="row">
        <div class="col-md-10">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create Batch</h3>
                </div>
                <div class="box-body">
                    <form class="form-horizontal" asp-action="add" asp-controller="batch" method="post">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Batch Name: *</label>
                            <div class="col-sm-4">
                                <input type="text"
                                       asp-for="Name"
                                       class="form-control"
                                       maxlength="128"
                                       autocomplete="Off" />
                                <div>
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>
                        <div style="display:none">
                            <label class="col-sm-3 control-label">SQL Query: *</label>
                            <div class="col-sm-9">
                                <!--<textarea asp-for="SqlQuery"
                                          rows="8"
                                          class="form-control"
                                          maxlength="4000"
                                          autocomplete="Off">
                                </textarea>-->
                                <p class="text-info">
                                    Please make sure that SQL query returns these columns - <b>CustomerId</b>, <b>CustomerName</b>, <b>AmountDue</b>
                                </p>
                                <div>
                                    <!--<span asp-validation-for="SqlQuery"></span>-->
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="text-danger"><strong>Note: The batch creation process may take 10-15 minutes.</strong></p>
                                </div>
                                <div class="col-md-4  text-right">
                                    <button type="submit" class="btn btn-primary btn-flat">Get Charges</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>